<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pruebasfirebase.ActivityEjercicioFinalFormulario" >


    <EditText
        android:id="@+id/emp_etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre completo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/emp_etDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="DNI"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/emp_etProfesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ProfesiÃ³n"
        android:inputType="textMultiLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/emp_btnInsertar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/emp_btnModificar"
            android:layout_margin="30dp"
            android:onClick="accInsertar"
            android:text="Insertar" />

        <Button
            android:id="@+id/emp_btnModificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:onClick="accModificar"
            android:text="Modificar" />
    </RelativeLayout>
</LinearLayout>


